<div id="register-screen" class="display-none" style="text-align:left;margin:20px">
    <form id="register-screen-form">
        <div class="form-group">
            <label for="register-screen-form-email">Email address</label>
            <input type="email" name="Email" class="form-control" id="register-screen-form-email" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="register-screen-form-password">Password</label>
            <input type="password" name="Password" class="form-control" id="register-screen-form-password" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="register-screen-form-confirm-password">Confirm Password</label>
            <input type="password" name="ConfirmPassword" class="form-control" id="register-screen-form-confirm-password" placeholder="Confirm">
        </div>
        <a href="#" class="btn btn-default" id="cmd-register-execute">Register</a>
    </form>
</div>

